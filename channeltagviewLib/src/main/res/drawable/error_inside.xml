<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%" android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/cmv_red" />
                        <corners android:radius="4dp" />
                        <size android:width="25dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>

            <item>
                <rotate android:fromDegrees="315" android:pivotX="50%" android:pivotY="50%" android:toDegrees="315">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/cmv_red" />
                        <corners android:radius="4dp" />
                        <size android:width="25dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/cmv_white" />
                        <corners android:radius="4dp" />
                        <size android:width="25dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>

            <item>
                <rotate android:fromDegrees="315" android:pivotX="50%" android:pivotY="50%">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/cmv_white" />
                        <corners android:radius="4dp" />
                        <size android:width="25dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>

        </layer-list>
    </item>
</selector>